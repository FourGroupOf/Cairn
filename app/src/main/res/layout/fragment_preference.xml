<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundDark"
    android:orientation="vertical"
    tools:context=".ui.preferences.PreferenceFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/AccountDetailsHeading"
                android:textColor="@color/OrangeDark"
                android:textSize="30sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="275dp"
                card_view:cardBackgroundColor="@color/CardviewBack"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="10dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edtPreferencesEmail"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="#FFFFFF"
                            android:importantForAutofill="no"
                            android:inputType="textEmailAddress"
                            android:textColor="#7A7A7A"
                            android:enabled="false"/>
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/swMetric"
                        android:layout_width="305dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:padding="5dp"
                        android:text="@string/PreferredUnits"
                        android:textColor="#FFFFFF"
                        android:textSize="17dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edtPreferencesHomeAddress"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFFFFF"
                            android:hint="@string/HintHomeAddress"
                            android:importantForAutofill="no"
                            android:inputType="textPostalAddress"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/ActFavouriteLandmarkType"
                android:textColor="@color/OrangeDark"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/CardviewBack"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="10dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="10dp">


                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <!--                <Spinner-->
                    <!--                    android:id="@+id/spinnerLandmarkType"-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:layout_gravity="center"-->
                    <!--                    android:backgroundTint="#FFFFFF"-->
                    <!--                    android:outlineSpotShadowColor="#FFFFFF"/>-->

                    <RadioGroup
                        android:id="@+id/rdgLandmarkType"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <RadioButton
                            android:id="@+id/rbtnHistorical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:buttonTint="@color/TextColour"
                            android:text="@string/LandmarkTypeHistorical"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:checked="true"/>

                        <RadioButton
                            android:id="@+id/rbtnModern"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="20dp"
                            android:buttonTint="@color/TextColour"
                            android:text="@string/LandmarkTypeModern"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rbtnPopular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="20dp"
                            android:buttonTint="@color/TextColour"
                            android:text="@string/LandmarkTypePopular"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/frequently_asked_questions"
                android:textColor="@color/OrangeDark"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/CardviewBack"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="10dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="10dp">


                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="160dp"
                        android:text="@string/have_a_question"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnFAQ"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="61dp"
                        android:layout_height="63dp"
                        android:layout_gravity="end"
                        android:backgroundTint="#74877D7D"
                        android:text=">"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnLogout"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/OrangeLight"
                    android:drawableRight="@drawable/ic_baseline_close_24"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_margin="20dp"
                    android:text="@string/ASettingsLogout" />

                <Button
                    android:id="@+id/btnSaveSettings"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/OrangeLight"
                    android:drawableRight="@drawable/ic_baseline_settings_24"
                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_margin="20dp"
                    android:text="@string/ASettingSave" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
